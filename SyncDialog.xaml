<Window x:Class="XML_sync.SyncDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_sync"
        mc:Ignorable="d"
        Title="SyncDialog" Height="200" Width="400">
    <Grid>
        <CheckBox Name="FromLeftCb" Margin="10" Content="From left" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox Name="FromRightCB" Margin="10,30" Content="From right" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <CheckBox Name="UnequalCB" Margin="10,50" Content="Unequal" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="UnequalCombo" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50" SelectedIndex="0">
            <ComboBoxItem Content="From left"/>
            <ComboBoxItem Content="From right"/>
        </ComboBox>
        <Button Name="SyncB" Content="Sync" Width="100" Height="20" Margin="10,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SyncB_Click"/>
    </Grid>
</Window>
